{
	"compilerOptions": {
		"sourceRoot": "./source",
		"outDir": "./build",
		"noResolve": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": true,
		"inlineSources": true,
		"noEmitOnError": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"lib": [
			"es6"
		]
	},
	"exclude": [
		"build"
	],
	"include": [
		"source"
	]
}
