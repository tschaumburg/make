{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "types",
		"noResolve": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true, 
		"alwaysStrict": true,
		"removeComments": false,
		"sourceMap": true,
		"inlineSources": false,
		"noEmitOnError": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"lib": [
			"es6"
		]
	},
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*.spec.ts",
		"build",
		"**/build",
		"types"
	],
	"include": [
		"./source"
	]
}
